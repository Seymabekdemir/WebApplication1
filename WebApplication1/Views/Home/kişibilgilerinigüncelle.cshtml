@model WebApplication1.Models.Kisi

@{
    ViewData["Title"] = "Kişi Güncelle";
}

<h2>Kişi Güncelle</h2>

<!-- İlk adım: ID ile kişi getir -->
<form asp-action="KisiGetir" method="post">
    <label>Kişi ID:</label><br />
    <input name="id" type="number" class="form-control" required /><br />
    <button type="submit" class="btn btn-primary mb-3">Kişiyi Getir</button>
</form>

@if (Model != null && Model.Id != 0)
{
    <!-- İkinci adım: Kişi bilgilerini düzenle -->
    <form asp-action="kişibilgilerinigüncelle" method="post">
        <input type="hidden" asp-for="Id" />

        <label>Ad:</label><br />
        <input asp-for="Ad" class="form-control" /><br />

        <label>Soyad:</label><br />
        <input asp-for="Soyad" class="form-control" /><br />

        <label>Email:</label><br />
        <input asp-for="Email" class="form-control" /><br />

        <label>Departman:</label><br />
        <input asp-for="Departman" class="form-control" /><br />

        <label>Doğum Tarihi:</label><br />
        <input asp-for="DogumTarihi" type="date" class="form-control" /><br />

        <label>İş Tanımı:</label><br />
        <input asp-for="IsTanimi" class="form-control" /><br />

        <button type="submit" class="btn btn-warning mt-2">Güncelle</button>
    </form>
}
@if (ViewBag.Mesaj != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Mesaj</div>
}
