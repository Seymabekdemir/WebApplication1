@model List<WebApplication1.Models.Kisi>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Departman</th>
            <th>Doğum Tarihi</th>
            <th>İş Tanımı</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var kisi in Model)
            {
                <tr>
                    <td>@kisi.Ad</td>
                    <td>@kisi.Soyad</td>
                    <td>@kisi.Email</td>
                    <td>@kisi.Departman</td>
                    <td>@kisi.DogumTarihi.ToString("yyyy-MM-dd")</td>
                    <td>@kisi.IsTanimi</td>
                    <td>
                        <button class="btn btn-danger kisi-sil"
                                data-id="@kisi.Id"
                                data-adsoyad="@kisi.Ad @kisi.Soyad">
                            Sil
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">Sonuç bulunamadı</td>
            </tr>
        }
    </tbody>
</table>
